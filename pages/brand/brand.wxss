/* pages/brand/brand.wxss */
.brand navigator{
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: space-between;
    border-top:1px solid #ccc;
    border-bottom:1px solid #ccc;
    margin-bottom: 10rpx;
}
.brand .pic{
    width: 50%;
    height: 300rpx;
}
.brand .introduce{
    width: 50%;
    height: 300rpx;
}
.brand .introduce image{
    width: 200rpx;
    height: 100rpx;
    margin:0 auto;
    display: block;
}
.brand .introduce text{
    display: block;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}
.brand .introduce text.brief{
    color: #ccc;
}
.brand .introduce text.price{
    color: orangered;
}
